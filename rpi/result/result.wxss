/* RPI测试结果页样式 - 赛博朋克霓虹风格 */

page {
  background: #0A0A0F;
  height: 100vh;
}

.rpi-result-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景效果 */
.bg-effect {
  position: fixed;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  opacity: 0.15;
  filter: blur(100rpx);
  animation: bgRotate 20s linear infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes bgRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 滚动区域 */
.result-scroll {
  flex: 1;
  z-index: 1;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 结果卡片 */
.result-card {
  background: rgba(26, 26, 46, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.5),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

/* 人格头部 */
.personality-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.code-badge {
  display: inline-block;
  padding: 16rpx 40rpx;
  border-radius: 50rpx;
  font-size: 48rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.personality-name {
  font-size: 56rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.personality-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  font-style: italic;
}

/* 维度区域 */
.dimensions-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.dimensions-bars {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dimension-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.dim-label {
  width: 120rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: right;
}

.dim-bar {
  flex: 1;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}

.dim-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 1s ease;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.3);
}

.dim-value {
  width: 80rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
}

/* 标签云 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 50rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.tag-item:hover {
  background: rgba(255, 107, 107, 0.2);
  border-color: rgba(255, 107, 107, 0.5);
}

/* 解读内容 */
.content-section {
  margin-bottom: 50rpx;
}

.summary {
  font-size: 32rpx;
  color: #fff;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  border-left: 6rpx solid #FF6B6B;
}

.detail-content {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 2;
  white-space: pre-line;
}

/* 广告位 */
.ad-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.2);
}

.ad-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 20rpx;
  text-align: center;
}

.ad-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
}

.ad-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 10rpx;
}

.ad-subtext {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* 底部操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 40rpx;
  background: rgba(10, 10, 15, 0.95);
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  z-index: 10;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  background: transparent;
  border: none;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.action-btn:active .btn-icon {
  transform: scale(0.9);
}

.action-btn.share .btn-icon {
  background: linear-gradient(135deg, #FF6B6B, #4ECDC4);
}

.action-btn.save .btn-icon {
  background: linear-gradient(135deg, #4ECDC4, #45B7D1);
}

.action-btn.retry .btn-icon {
  background: linear-gradient(135deg, #96CEB4, #00FF88);
}

.btn-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.share-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
}

.modal-content {
  position: relative;
  z-index: 1;
  width: 80%;
  max-width: 600rpx;
}

.share-card {
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
}

.card-header {
  padding: 60rpx 40rpx;
  text-align: center;
}

.card-code {
  display: block;
  font-size: 72rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 10rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.card-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
}

.card-body {
  padding: 40rpx;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.card-summary {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

.card-tags text {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #f8f8f8;
  border-top: 2rpx solid #eee;
}

.card-qr {
  font-size: 24rpx;
  color: #999;
}

.card-logo {
  font-size: 36rpx;
  font-weight: 900;
  color: #FF6B6B;
  letter-spacing: 4rpx;
}

.modal-actions {
  margin-top: 30rpx;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn::after {
  border: none;
}
