/* RPI测试答题页样式 - 赛博朋克霓虹风格 */

page {
  background: #0A0A0F;
  min-height: 100vh;
}

.rpi-quiz-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}

/* 背景渐变 */
.bg-gradient {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(ellipse at 20% 20%, rgba(255, 107, 107, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at 80% 80%, rgba(78, 205, 196, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse at 50% 50%, rgba(108, 92, 231, 0.1) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

/* 顶部进度区 */
.header {
  position: relative;
  z-index: 1;
  margin-bottom: 60rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B6B, #4ECDC4);
  border-radius: 4rpx;
  transition: width 0.5s ease;
  position: relative;
}

.progress-glow {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5));
  animation: progressGlow 2s ease-in-out infinite;
}

@keyframes progressGlow {
  0%, 100% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}

.progress-text {
  text-align: center;
}

.current {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF6B6B;
  text-shadow: 0 0 20rpx rgba(255, 107, 107, 0.5);
}

.total {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 题目区 */
.question-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 1;
  margin-bottom: 60rpx;
}

.question-number {
  font-size: 24rpx;
  color: #4ECDC4;
  letter-spacing: 4rpx;
  margin-bottom: 30rpx;
  text-transform: uppercase;
}

.question-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.6;
  text-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.5);
  opacity: 0;
  transform: translateY(20rpx);
}

.question-text.fade-in {
  animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 选项区 */
.options-area {
  z-index: 1;
  margin-bottom: 60rpx;
}

.option-item {
  position: relative;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
  opacity: 0;
  transform: translateY(30rpx);
}

.option-item.slide-up {
  animation: slideUp 0.5s ease forwards;
}

@keyframes slideUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.2), rgba(78, 205, 196, 0.2));
  border-color: #FF6B6B;
  box-shadow: 
    0 0 20rpx rgba(255, 107, 107, 0.3),
    inset 0 0 20rpx rgba(255, 107, 107, 0.1);
}

.option-indicator {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.7);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.option-item.selected .option-indicator {
  background: linear-gradient(135deg, #FF6B6B, #4ECDC4);
  color: #fff;
  box-shadow: 0 0 20rpx rgba(255, 107, 107, 0.5);
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

.option-item.selected .option-text {
  color: #fff;
}

.option-glow {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background: radial-gradient(circle at center, rgba(255, 107, 107, 0.2) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.option-item.selected .option-glow {
  opacity: 1;
}

/* 底部导航 */
.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1;
  padding-bottom: 20rpx;
}

.nav-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.95);
}

.nav-btn.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.nav-icon {
  font-size: 32rpx;
  color: #4ECDC4;
}

.nav-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.nav-btn.next {
  background: linear-gradient(135deg, #FF6B6B, #4ECDC4);
}

.nav-btn.next .nav-text,
.nav-btn.next .nav-icon {
  color: #fff;
}

/* 题目指示点 */
.question-dots {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.dot.active {
  background: #FF6B6B;
  box-shadow: 0 0 10rpx rgba(255, 107, 107, 0.5);
  transform: scale(1.2);
}

.dot.completed {
  background: #4ECDC4;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.modal-content {
  position: relative;
  background: linear-gradient(135deg, #1A1A2E, #16213E);
  border: 2rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 30rpx;
  padding: 60rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 
    0 0 40rpx rgba(255, 107, 107, 0.2),
    inset 0 0 40rpx rgba(255, 255, 255, 0.05);
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 20rpx;
}

.modal-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 40rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #FF6B6B, #FF4757);
  color: #fff;
}
